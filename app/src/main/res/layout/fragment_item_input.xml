<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#12131C"
    tools:context=".ItemInputFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/goBackToLogFood"
                app:srcCompat="@drawable/baseline_arrow_back_30"
                android:background="#12131C"
                android:layout_marginStart="10dp"
                android:layout_centerVertical="true"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Create Food"
                android:gravity="center"
                android:padding="15dp"
                android:textSize="16sp"/>

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/addFood"
                app:srcCompat="@drawable/baseline_arrow_forward_30"
                android:background="#12131C"
                android:layout_alignParentRight="true"
                android:layout_marginEnd="10dp"
                android:layout_centerVertical="true"/>

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:background="#565760" />

        <RelativeLayout
            android:id="@+id/goToProfile"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/listcontainerbg">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Description"
                android:layout_marginStart="20dp"
                android:textSize="18sp"
                android:layout_centerVertical="true"/>

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/descriptionEditText"
                android:hint="ex. Chicken"
                android:textColor="#FFF"
                android:textSize="16sp"
                android:textColorHint="#999AA6"
                android:backgroundTint="@android:color/transparent"
                android:maxLines="1"
                android:maxLength="18"
                android:gravity="right"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="10dp"/>

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#565760" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/listcontainerbg">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Serving Size"
                android:layout_marginStart="20dp"
                android:textSize="18sp"
                android:layout_centerVertical="true"/>

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/servingSizeEditText"
                android:hint="ex. 500g"
                android:textColor="#FFF"
                android:textColorHint="#999AA6"
                android:textSize="16sp"
                android:backgroundTint="@android:color/transparent"
                android:maxLines="1"
                android:maxLength="6"
                android:gravity="right"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="10dp"/>

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#565760" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/listcontainerbg">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Serving per container"
                android:layout_marginStart="20dp"
                android:textSize="18sp"
                android:layout_centerVertical="true"/>

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/servingsContainerEditText"
                android:hint="1"
                android:textColor="#FFF"
                android:textColorHint="#999AA6"
                android:textSize="16sp"
                android:backgroundTint="@android:color/transparent"
                android:maxLines="1"
                android:maxLength="1"
                android:gravity="right"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="10dp"/>

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#565760" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/listcontainerbg">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Calorie"
                android:layout_marginStart="20dp"
                android:textSize="18sp"
                android:layout_centerVertical="true"/>

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/calorieEditText"
                android:hint="100 cal"
                android:textColor="#FFF"
                android:textColorHint="#999AA6"
                android:textSize="16sp"
                android:backgroundTint="@android:color/transparent"
                android:maxLines="1"
                android:maxLength="3"
                android:gravity="right"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="10dp"/>

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:background="#565760" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/listcontainerbg"/>

    </LinearLayout>

</FrameLayout>